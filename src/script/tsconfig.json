{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2019",
        "sourceMap": true,
//        "noUnusedLocals": true,
//        "noUnusedParameters": true,
        "strict": true,
        "rootDir": "src",
        "experimentalDecorators": true,
        "removeComments": true,
        "plugins": [
            {
                "transform": "ts-auto-mock/transformer",
                "cacheBetweenTests": false
            }
        ]
    },
    "include": [
        "src/*"
    ]
}
