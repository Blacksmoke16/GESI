{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "sourceMap": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "rootDir": "src"
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "spec/**/*.spec.ts"
    ]
}
